{
    "name": "EraseMeta",
    "description": "Privacy-first metadata remover - clean files before sharing",
    "version": "1.2",
    "manifest_version": 3,
    "icons": {
        "16": "assets/icon-16.png",
        "48": "assets/icon-48.png",
        "128": "assets/icon-128.png"
    },
    "background": {
        "scripts": [
            "src/background/background.js"
        ],
        "type": "module"
    },
    "action": {
        "default_title": "EraseMeta",
        "default_icon": {
            "16": "assets/icon-16.png",
            "48": "assets/icon-48.png",
            "128": "assets/icon-128.png"
        },
        "default_popup": "src/popup/popup.html"
    },
    "content_scripts": [
        {
            "js": [
                "src/content/content-loader.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "src/content/content.js",
                "src/utils/base64.js",
                "src/utils/fileDict.js",
                "src/utils/chunkManager.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "permissions": [
        "tabs",
        "contextMenus",
        "downloads",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "EraseMeta@EraseMeta",
            "strict_min_version": "112.0",
            "data_collection_permissions": {
                "required": [
                    "none"
                ]
            }
        }
    }
}
