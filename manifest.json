{
    "name": "EraseMeta",
    "description": "Privacy-first metadata remover - clean files before sharing",
    "version": "1.2",
    "manifest_version": 3,
    "icons": {
        "16": "assets/icon-16.png",
        "48": "assets/icon-48.png",
        "128": "assets/icon-128.png"
    },
    "background": {
        "service_worker": "src/background/background.js",
        "type": "module"
    },
    "action": {
        "default_title": "EraseMeta",
        "default_icon": {
            "16": "assets/icon-16.png",
            "48": "assets/icon-48.png",
            "128": "assets/icon-128.png"
        },
        "default_popup": "src/popup/popup.html"
    },
    "options_page": "src/options/options.html",
    "content_scripts": [
        {
            "js": [
                "src/content/content-loader.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "src/content/content.js",
                "src/utils/base64.js",
                "src/utils/fileDict.js",
                "src/utils/chunkManager.js",
                "src/utils/logger.js",
                "src/utils/cleanup.js",
                "src/utils/cleanImages.js",
                "src/utils/cleanPdf.js",
                "src/utils/cleanOffice.js",
                "src/utils/cleanByFFmpeg.js",
                "src/utils/cleanSvg.js",
                "src/utils/cleanEpub.js",
                "src/utils/settingsCache.js",
                "src/utils/fileCache.js",
                "src/utils/downloadInterceptor.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "permissions": [
        "tabs",
        "contextMenus",
        "downloads",
        "storage",
        "notifications",
        "activeTab"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "commands": {
        "toggle-auto-clean": {
            "suggested_key": {
                "default": "Alt+Shift+C",
                "mac": "Alt+Shift+C"
            },
            "description": "Toggle auto-clean uploads"
        },
        "toggle-download-clean": {
            "suggested_key": {
                "default": "Alt+Shift+D",
                "mac": "Alt+Shift+D"
            },
            "description": "Toggle clean downloads"
        },
        "clean-hovered-image": {
            "suggested_key": {
                "default": "Alt+Shift+I",
                "mac": "Alt+Shift+I"
            },
            "description": "Download clean version of hovered image"
        }
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "EraseMeta@EraseMeta",
            "strict_min_version": "109.0",
            "data_collection_permissions": {
                "required": [
                    "none"
                ]
            }
        }
    }
}
